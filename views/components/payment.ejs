<form id="payment-form" novalidate>
  <div class="modal fade >" id="PayModal" tabindex="-1" aria-labelledby="PayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <div class="d-flex justify-content-end">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="container justify-content-center">
            <div class="row px-3 px-sm-0">
              <div class="content-right col-12 d-flex flex-column gap-3 py-3">
                <div class="container mt-5">
                  <h1 class="text-center mb-4" style="color: blue">CHECKOUT</h1>

                  <!-- Số tiền hiện có -->
                  <div class="text-center fs-4 d-flex flex-column">
                    <div class="money d-flex flex-row justify-content-center align-items-center">
                      Current balance:&nbsp;<i class="fa-solid fa-dollar-sign" style="color: green"></i>

                      <div class="odometer text-center px-1" id="odometer-balance"></div>
                    </div>
                    <div class="money d-flex flex-row justify-content-center align-items-center">
                      Total costs:&nbsp;<i class="fa-solid fa-dollar-sign" style="color: green"></i>

                      <div class="odometer text-center px-1" id="odometer-checkout"></div>
                    </div>
                    <div class="container text-center p-3">
                      <button type="button" class="btn btn-outline-success add-money-container">
                        Add funds to wallet
                      </button>
                    </div>
                  </div>

                  <!-- Form thông tin để vận chuyển -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" id="name" class="form-control pay-name-input" name="name" placeholder="Name" value="<%= user.name %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" id="address" class="form-control pay-address-input" name="address" placeholder="Address" required />
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" class="form-control pay-email-input" name="email" placeholder="Email" value="<%= user.mail %>" required />
                  </div>
                  <div class="mb-3">
                    <label for="phone" class="form-label">Phone number:</label>
                    <input type="tel" id="phone" class="form-control pay-phonenum-input" name="phone" placeholder="Phone number" required />
                  </div>
                </div>

                <div class="text-center">
                  <button type="button" class="btn btn-outline-primary" id="confirmOrderBtn">
                    Place Order
                  </button>
                </div>
                <!-- CODE JAVASCRIPT ĐỂ XỬ LÝ REQUEST -->
                <script src="/scripts/payment.js"></script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>