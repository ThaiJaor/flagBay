<form id="pass-input-form" novalidate>
  <div class="modal fade >" id="PassModal" tabindex="-1" aria-labelledby="PassModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <div class="d-flex justify-content-end">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="container justify-content-center">
            <div class="row px-3 px-sm-0" style="width: 100%">
              <div class="content-right col-12 d-flex flex-column gap-3 py-3">
                <div class="p-1">
                  <label for="currentPassInput">Current password:</label>
                  <div class="input-group">
                    <input type="password" id="currentPassInput" class="form-control current-pass-input" placeholder="Current password" required />
                    <div class="input-group-append">
                      <button class="btn toggle-password" type="button">
                        <i class="far fa-eye"></i>
                      </button>
                    </div>
                  </div>
                  <div id="usernameFeedback" class="invalid-feedback">
                    Current password is required
                  </div>
                </div>
                <div class="p-1">
                  <label for="newPassInput">New password:</label>
                  <div class="input-group">
                    <input type="password" id="newPassInput" class="form-control new-pass-input" placeholder="New password" required />
                    <div class="input-group-append">
                      <button class="btn toggle-password" type="button">
                        <i class="far fa-eye"></i>
                      </button>
                    </div>
                  </div>
                  <div id="usernameFeedback" class="invalid-feedback">
                    New password is required
                  </div>
                </div>
                <div class="p-1">
                  <label for="confirmNewPassInput">Confirm new password:</label>
                  <div class="input-group">
                    <input type="password" id="confirmNewPassInput" class="form-control confirm-new-pass-input" placeholder="Confirm new password" required />
                    <div class="input-group-append">
                      <button class="btn toggle-password" type="button">
                        <i class="far fa-eye"></i>
                      </button>
                    </div>
                  </div>
                  <div id="usernameFeedback" class="invalid-feedback">
                    Confirm new password is required
                  </div>
                </div>

                <div class="text-center">
                  <button type="button" class="btn btn-outline-success" id="confirmPassBtn">
                    Confirm
                  </button>
                </div>
                <!-- CODE JAVASCRIPT ĐỂ XỬ LÝ REQUEST -->
                <script src="/scripts/profile.js"></script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>