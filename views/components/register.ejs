<div class="modal fade" id="RegisterModal" tabIndex="-1" aria-labelledby="RegisterModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-modal-register">
      <div class="modal-body">
        <div class="d-flex justify-content-end">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="container justify-content-center">
          <div class="row px-3 px-sm-0" style="width: 100%">
            <div class="content-left col-12 d-none col-sm-5 d-sm-block" style="padding-right: 2.5rem; margin-top: 0px">
              <div class="brand">Sign Up</div>
              <div class="detail">Thanks for choosing us</div>
            </div>
            <div class="content-right col-sm-7 col-12 d-flex flex-column gap-3 py-3">
              <div class="brand d-sm-none">Sign Up</div>
              <div class="form-group">
                <label>Username:</label>
                <input type="username" class="form-control username-input-reg" placeholder="Username" />
              </div>
              <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control name-input-reg" placeholder="Name" />
              </div>
              <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control mail-input-reg" placeholder="Mail" />
              </div>
              <div class="form-group">
                <label>Password: </label>
                <input type="password" class="form-control name-input-reg password-input-reg" placeholder="Password" />
              </div>
              <div class="form-group">
                <label>Confirm password: </label>
                <input type="password" class="form-control passwordConfirm-input-reg" placeholder="Confirm password" onkeyup="handleKeyPress(event)" />
              </div>
              <button class="btn btn-outline-primary" onclick="register()">
                Register
              </button>

              <!-- CODE JAVASCRIPT ĐỂ XỬ LÝ GỬI REQUEST VÀ CHUYỂN MÀN HÌNH KHI ĐĂNG KÝ (by Dương) -->
              <script src="/scripts/register.js"></script>
              <hr />
              <div class="text-center">
                <button class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#LoginModal">
                  Already've have an account? Login
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>