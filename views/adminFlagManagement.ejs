<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Flag management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/odometer.js/0.4.8/odometer.min.js" integrity="sha512-51WDTV7haD9BBDc8RWH2r5TnuSiRyAqEnbGyuKHYn+qpYCrCckxFeqlr1I5UoOULijyLV2vnHO9LS4MrAzHxwQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/odometer.js/0.4.7/themes/odometer-theme-minimal.min.css" integrity="sha512-Jeqp8CoPCvf9tf/uWokfCTsFcv5BIhfTYaTTJA0NKn6B88zDSWe5d/9HTmZX63FGpGGQdB8Chg2khB96+wn4Tw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/fileinput.min.js" integrity="sha512-XxRivO6jA7xU9a0ozATMIFQFdNySyRrB8uE1QctFmjTTGSGUj9tC7CpnVf7xq1e/QeVhbY9ZLbxEzPFIWpW+xA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/css/fileinput.min.css" integrity="sha512-sHiVTDN234pgseKqjDwH39VjS9DkyffX4S00kuAWWq+FrTq7HlFjPoWbfX/QFAxkdG9i9/1ftdG2sS+XWLcJmw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/themes/fa6/theme.min.js" integrity="sha512-ILB6azN1Kem4wK526yCkpswtEc2+yNUR88fUafqyXSRAAWeKGLDo9Jv/hkoVFRdJ1dPdzI5r2/jHcutC2D+ICg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="stylesheet" href="/styles/login_register.css" />
</head>

<body>
  <!-- ===================SIDEBAR=================== -->
  <%- include('./partials/sidebar.ejs'); %>
  <!-- ===================SIDEBAR=================== -->

  <!-- ===================HEADER=================== -->
  <%- include('./partials/header.ejs') %>
  <!-- ===================HEADER=================== -->

  <!-- ===================CONTENT=================== -->
  <div class="container pb-5">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <div class="justify-content-center intro p-3 mx-2">
        <div style="color: #f0f2f5; visibility: hidden">Ignore text</div>
        <div class="fs-1 text-center pe-3 fw-bold text-dark" style="width: 30rem">
          Flag Management
        </div>
      </div>
    </div>
    <div class="container d-flex flex-column gap-2 pt-5">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="col-3">
          <label for="flag-name" class="form-label">Name:</label>
          <input type="text" id="flag-name" class="form-control mb-3 flag-name-input" name="flag-name" placeholder="Flag Name" value="<%= flag.name %>" required />
        </div>
        
        <div class="col-3">
          <label for="category" class="form-label">Category:</label>
          <select id="category" class="form-select mb-3" aria-label="Category" name="category">
            <% categories.forEach((category) => { %>
              <option value="<%= category.name %>" <% if (category.name === flag.type) { %>selected<% } %>><%= category.name %></option>
            <% }); %>
          </select>
        </div>
        
        <div class="col-3">
          <label for="flag-price" class="form-label">Price:</label>
          <input type="number" id="flag-price" class="form-control mb-3 flag-price-input" name="flag-price" value="<%= flag.price %>" placeholder="Price" required />
        </div>
      </div>
      
      <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="formFile" class="form-label"></label>
          <input type="file" name="images" id="formFile" class="form-control">
        </div>
      </form>
    </div>
    
    <div class="d-flex flex-row justify-content-center px-5">
      <button class="col-3 p-1 m-3 btn btn-outline-danger" id="resetFlagMnBtn">Reset</button>
      <button class="col-3 p-1 m-3 btn btn-outline-success">Confirm</button>
    </div>
  </div>
  <div class="flag-id" style="display: none"><%= flag._id %></div>

  <!-- ===================FOOTER=================== -->
  <%- include('./partials/footer.ejs') %>
  <!-- ===================FOOTER=================== -->

  <script>
    $(document).ready(function() {
      $(".sub-btn").click(function() {
        $(this).next(".sub-menu").slideToggle();
        $(this).find(".dropdown").toggleClass("rotate");
      });

      $(".menu-btn").click(function() {
        $(".side-bar").addClass("active");
        $(".menu-btn").css("visibility", "hidden");
      });

      $(".close-btn").click(function() {
        $(".side-bar").removeClass("active");
        $(".menu-btn").css("visibility", "visible");
      });

      $(document).on("click", function(event) {
        if (
          !$(event.target).closest(".side-bar").length &&
          !$(event.target).is(".side-bar") &&
          !$(event.target).is(".menu-btn") &&
          !$(event.target).closest(".menu-btn").length
        ) {
          $(".side-bar").removeClass("active");
          $(".menu-btn").css("visibility", "visible");
        }
      });
    });
    $(".search-box").click(function() {
      $("#search-form").submit();
    });
    $(document).ready(function() {
      $(".login-container").click(function() {
        $("#LoginModal").modal("show");
      });

      $(".register-container").click(function() {
        $("#RegisterModal").modal("show");
      });
    });
    $(document).ready(function() {
      $(".flag-link").click(function(event) {
        event.preventDefault();
        window.location.href = $(this).attr("href");
      });
    });
    $(() => {
        $("#formFile").fileinput({theme: 'fa6', showUpload: false, previewFileType: 'any'});
    });
    $(document).ready(function() {
      $("#resetFlagMnBtn").click(function() {
        $('input[type="text"]').val("");
        $('input[type="number"]').val("");
        $("#category").prop("selectedIndex", 0);
        $(".fileinput-remove").click();
      });
    });
    $(document).ready(function() {
      // Get the path to the existing image from the flag.image property
      var existingImagePath = "/flags/<%= flag.image %>";
      
      $(".file-preview").append('<div class = "fs-4"> Existing File: </div>');

      if (existingImagePath) {
        $(".file-preview").append('<img src="' + existingImagePath + '" class="img-thumbnail me-3" style="width: 15rem; height: 15rem; " />');
      }      // Show a clear button for the existing image
      $(".file-preview").append('<button type="button" class="btn btn-sm btn-danger clear-existing-image">Clear</button>');
    
      $(".clear-existing-image").click(function() {
        $("#formFile").val(""); 
        $(".img-thumbnail").remove(); 
        $(this).hide(); // Hide the clear button
      });
    });
  </script>
</body>

</html>