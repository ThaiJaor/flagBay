  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/fileinput.min.js" integrity="sha512-XxRivO6jA7xU9a0ozATMIFQFdNySyRrB8uE1QctFmjTTGSGUj9tC7CpnVf7xq1e/QeVhbY9ZLbxEzPFIWpW+xA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/css/fileinput.min.css" integrity="sha512-sHiVTDN234pgseKqjDwH39VjS9DkyffX4S00kuAWWq+FrTq7HlFjPoWbfX/QFAxkdG9i9/1ftdG2sS+XWLcJmw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/piexif.min.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/plugins/sortable.min.js" type="text/javascript"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/fileinput.min.js"></script>
  <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/locales/LANG.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/themes/fa6/theme.min.js" integrity="sha512-ILB6azN1Kem4wK526yCkpswtEc2+yNUR88fUafqyXSRAAWeKGLDo9Jv/hkoVFRdJ1dPdzI5r2/jHcutC2D+ICg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="stylesheet" href="/styles/login_register.css" />
</head>

<body>
  <!-- ===================SIDEBAR=================== -->
  <%- include('./partials/sidebar.ejs'); %>
  <!-- ===================SIDEBAR=================== -->

  <!-- ===================HEADER=================== -->
  <%- include('./partials/header.ejs') %>
  <!-- ===================HEADER=================== -->

  <!-- ===================CONTENT=================== -->
  <div class="container pb-5">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <div class="justify-content-center intro p-3 mx-2">
        <div style="color: #f0f2f5; visibility: hidden">Ignore text</div>
        <div class="fs-1 text-center pe-3 fw-bold text-dark" style="width: 30rem">
          <%= mode === "add" ? "Add new flag" : "Edit flag" %>
        </div>
      </div>
    </div>
    <div class="container d-flex flex-column gap-2 pt-5">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <div class="col-3">
          <label for="flag-name" class="form-label">Name:</label>
          <input type="text" id="flag-name" class="form-control mb-3 flag-name-input" name="flag-name" placeholder="Flag Name" required value="<%= mode === "edit" ? flag.name : '' %>" />
        </div>

        <div class="col-3">
          <label for="category" class="form-label">Category:</label>
          <select id="category" class="form-select mb-3 category-input" aria-label="CategoryLabel" name="category">
            <option value="" disabled selected hidden>Select Category</option>
            <% for (let i = 0; i < options.length; i++) { %>
            <option value="<%= options[i] %>" <% if (mode === "edit" && options[i] === flag.type) { %>selected<% } %>><%= options[i] %></option>
            <% } %>
          </select>
        </div>

        <div class="col-3">
          <label for="flag-price" class="form-label">Price:</label>
          <input type="number" id="flag-price" class="form-control mb-3 flag-price-input" name="flag-price" placeholder="Price" required value="<%= mode === "edit" ? flag.price : '' %>" />
        </div>
      </div>

      <div enctype="multipart/form-data">
        <div class="mb-3">
          <label for="formFile" class="form-label"></label>
          <input type="file" name="images" id="formFile" class="form-control">
        </div>
      </div>
    </div>
    <div class="d-flex flex-row justify-content-center p-5">
      <button class="col-3 p-1 m-3 btn btn-outline-danger" id="resetFlagMnBtn">Reset</button>
      <button class="col-3 p-1 m-3 btn btn-outline-success">Confirm</button>
    </div>
  </div>
  <!-- ===================FOOTER=================== -->
  <%- include('./partials/footer.ejs') %>
  <!-- ===================FOOTER=================== -->
  <% if (mode === "edit") { %>
  <script>
    $("#formFile").fileinput({
      initialPreview: [
        "<img class='kv-preview-data file-preview-image' src='/flags/<%= flag.image %>'>"
      ],
      initialCaption: '<%= flag.image %>',
      autoReplace: true,
      overwriteInitial: true,
      showUploadedThumbs: false,
      maxFileCount: 1,
      initialPreviewShowDelete: false,
      showClose: false,
      showUpload: false,
      showUploadedThumbs: false,
      layoutTemplates: {
        actionDelete: ''
      },
      allowedFileExtensions: ["jpg", "png"]
    })
  </script>
  <% } else { %>
  <script>
    $("#formFile").fileinput({
      autoReplace: true,
      overwriteInitial: true,
      showUploadedThumbs: false,
      maxFileCount: 1,
      initialPreviewShowDelete: false,
      showClose: false,
      showUpload: false,
      showUploadedThumbs: false,
      layoutTemplates: {
        actionDelete: ''
      },
      allowedFileExtensions: ["jpg", "png"]
    });
  </script>
  <% } %>
  <script>
    $(document).ready(function() {
      $(".sub-btn").click(function() {
        $(this).next(".sub-menu").slideToggle();
        $(this).find(".dropdown").toggleClass("rotate");
      });

      $(".menu-btn").click(function() {
        $(".side-bar").addClass("active");
        $(".menu-btn").css("visibility", "hidden");
      });

      $(".close-btn").click(function() {
        $(".side-bar").removeClass("active");
        $(".menu-btn").css("visibility", "visible");
      });

      $(document).on("click", function(event) {
        if (
          !$(event.target).closest(".side-bar").length &&
          !$(event.target).is(".side-bar") &&
          !$(event.target).is(".menu-btn") &&
          !$(event.target).closest(".menu-btn").length
        ) {
          $(".side-bar").removeClass("active");
          $(".menu-btn").css("visibility", "visible");
        }
      });
    });
    $(".search-box").click(function() {
      $("#search-form").submit();
    });
    $(document).ready(function() {
      $(".login-container").click(function() {
        $("#LoginModal").modal("show");
      });

      $(".register-container").click(function() {
        $("#RegisterModal").modal("show");
      });
    });
    $(document).ready(function() {
      $(".flag-link").click(function(event) {
        event.preventDefault();
        window.location.href = $(this).attr("href");
      });
    });
    $(document).ready(function() {
      $(".btn-outline-danger").click(function() {
        const username = $(this).closest("tr").find("td:eq(0)").text().trim();

        $("#deleteUserMessage").html(`
          <span>Are you sure you want to delete user <strong>${username}</strong><span>?`);
        $("#confirmDeleteBtn").removeAttr("username");
        $("#confirmDeleteBtn").attr("username", username);

        $("#deleteUserModal").modal("show");
      });
    });

    $(document).ready(function() {
      $("#resetFlagMnBtn").click(function() {
        $('input[type="text"]').val("");
        $('input[type="number"]').val("");
        $("#category").prop("selectedIndex", 0);

        $(".fileinput-remove").click();
      });
    });
  </script>
</body>

</html>